from __future__ import with_statement
from fabric.api import *
from fabric.contrib.console import confirm

env.hosts = ['localhost']

def hello(name="world"):
    print("Hello %s!" % name)
def host_type():
    run('uname -s')


def commit():
    local("git add .")
    local("git commit")

def push():
    local("git push")

def prepare_deploy():
    commit()
    push()
    
def deploy():
    code_dir = '/home/adina/fabric/test_git_server/test_git'
    with settings(warn_only=True):
        if run("test -d %s" % code_dir).failed:
            run("git clone git@github.com:adeenutza/test_git.git %s" % code_dir)
    with cd(code_dir):
    	run("git push")
        # run("touch test_adina.txt")
